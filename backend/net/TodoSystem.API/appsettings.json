{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=todos;Username=postgres;Password=postgres"
  },
  "JsonPlaceholder": {
    "BaseUrl": "https://jsonplaceholder.typicode.com/",
    "TimeoutSeconds": 30,
    "RetryCount": 3,
    "EnableCaching": true,
    "CacheDurationMinutes": 15
  },
  "Cache": {
    "DefaultExpiration": "00:05:00",
    "ExternalApiExpiration": "00:02:00",
    "UserDataExpiration": "00:10:00"
  },
  "Jwt": {
    "Key": "your-super-secret-key-here-make-it-long-enough",
    "Issuer": "TodoSystem.API",
    "Audience": "TodoSystem.Client"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3} {CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "OpenTelemetry"
      }
    ]
  }
}